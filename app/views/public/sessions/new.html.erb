<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto"><h2>ログインページ</h2></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <table class="table-borderless">
            <tr>
              <td><%= f.label :'メールアドレス' %></td><br>
              <td><%= f.email_field :email, :size=>"50", autofocus: true, autocomplete: "email" %></td>
            </tr>

            <tr>
              <td><%= f.label :'ログインパスワード(６文字以上)' %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>

            <% if devise_mapping.rememberable? %>
            <tr>
              <td><%= f.check_box :remember_me %>
                  <%= f.label :remember_me %></td>
            </tr>
            <% end %>

            <tr>
              <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container"><br>
  <div class="row">
    <div class="col-7"><h3>ゲストとしてログインする</h3>
         <tr>
           <td><p>ゲストログインでは、コミュニティページの観覧のみご利用いただけます。</p></td>
           <td><%= link_to 'ログイン',  users_guest_sign_in_path, method: :post, class: "btn btn-secondary" %></td>
         </tr>
    </div>
  </div>
</div>
<%#= render "public/shared/links" %>
