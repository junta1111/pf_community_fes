<h2>Sign up</h2>

  <%= form_with model: @user, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"氏名" %><br>
    性<%= f.text_field :last_name %>
    名<%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :"氏名(カナ)" %><br>
    セイ<%= f.text_field :last_name_kana %>
    メイ<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"ログインパスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"ログインパスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
