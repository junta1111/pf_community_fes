<h2>マイページ</h2>

<div class="container">
  <div class="row">
    <div class="col-lg-2">
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.nickname %></h3>
  <h3><%= @user.place %></h3>
  <% if @user.sex == "women" %>
    <h3>女性</h3>
  <% elsif @user.sex == "men" %>
    <h3>男性</h3>
  <% elsif @user.sex == "other" %>
    <h3>その他</h3>
  <% end %>
  <% if @user.year == "under19" %>
    <h3>19歳以下</h3>
  <% elsif @user.year == "first20" %>
    <h3>20~24歳</h3>
  <% elsif @user.year == "second20" %>
    <h3>25歳~29歳</h3>
  <% elsif @user.year == "first30" %>
    <h3>30歳~34歳</h3>
  <% elsif @user.year == "second30" %>
    <h3>35歳~39歳</h3>
  <% elsif @user.year == "first40" %>
    <h3>40歳~44歳</h3>
  <% elsif @user.year == "second40" %>
    <h3>45歳~49歳</h3>
  <% elsif @user.year == "first50" %>
    <h3>50歳~54歳</h3>
  <% elsif @user.year == "second50" %>
    <h3>55歳~59歳</h3>
  <% elsif @user.year == "over60" %>
    <h3>60歳以上</h3>
  <% end %>
  <%= link_to '編集', edit_user_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <% @user.favorite_events.each do |favorite_event| %>
        <h3><%= favorite_event.event_name %></h3>
      <% end %>
    </div>
  </div>
</div>