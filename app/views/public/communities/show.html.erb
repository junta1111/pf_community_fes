
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
        <h4><%= @community.fes_name %></h4>
    </div>
  </div>
</div>

<div class="container" id="goods">
  <%= render "public/comments/index", {comments: @comments, current_user: @user, path: @path} %>
</div>

<%= flash[:danger] %>
<%= form_with(model: @comment, local:true) do |f| %>
    <div class="form-group">
        <p>
            <%= f.label 'コメント(255文字未満)' %>
            <%= f.text_area :comment,class: 'form-control' %>
            <%= f.hidden_field :community_id, value: @community.id %>
        </p>
    </div>
    <div class="form_action row">
      <div class="p-4">
          <%= f.submit '送信',class: 'btn btn-info btn-lg' %>
      </div>
    </div>
<% end %>