<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto"><h3>コミュニティページ編集</h3></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <%= form_with model: @communities, url: admin_community_path, method: :patch do |f| %>
