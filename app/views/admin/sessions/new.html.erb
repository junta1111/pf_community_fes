<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto"><h2>管理者ログイン</h2></div>
  </div>
</div>

<div class="container">
  <div class="row">
  <div>
    <%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>
    <div class="col lg-4">
     <table class="table-borderless">
       <div class="field">
         <tr>
           <td><%= f.label :メールアドレス %></td><br>
         <td><%= f.email_field :email, :size=>"50", autofocus: true, autocomplete: "email" %></td><br>
         </tr>
       </div>

       <div class="field">
         <tr>
           <td><%= f.label :パスワード %></td>
         <td><%= f.password_field :password, :size=>"50", autocomplete: "current-password" %></td>
         </tr>
       </div>

  <div class="actions">
    <tr>
      <td><%= f.submit "ログイン", class: 'btn btn-primary' %></td>
    </tr>
  </div>
     </table>
     </div>
     <% end %>
  </div>
</div>
</div>

<%= render "admin/shared/links" %>