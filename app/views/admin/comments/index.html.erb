<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto"><h2>コメント一覧</h2></div>
  </div>
</div>

<div class="container">
  <% @comments.each do |comment| %>
    <div class="row">
      <div class="col-2">
        <div class="center-block">
          <%= link_to edit_admin_user_path(comment.user_id) do %>
          <%= image_tag comment.user.get_profile_image(100,100) %>
          <% end %>
          <%= comment.user.nickname %>
        </div>
      </div>

      <div class="col-8">
        <b><%= comment.community.fes_name %></b>
        <p><%= comment.comment %></p>
      </div>

      <div class="col-2">
        <div style="width: 500px;">
          <%= comment.created_at %>
          <%= link_to "削除", admin_comment_path(comment.id), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %>
        </div>
      </div>
      </div>
    <% end %>
</div>